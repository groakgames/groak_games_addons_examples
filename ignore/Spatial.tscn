var facing := Vector3.FORWARD

enum DIRECTION{
	LEFT,
	RIGHT,
	FORWARD,
	BACK
}

func _physics_process(delta):
	var camera := get_viewport().get_camera()
	var adjusted_facing:Vector3 = Quat(camera.global_transform.basis) * facing
	adjusted_facing.y = 0
	adjusted_facing = adjusted_facing.normalized()
	var animation_direction
	if -adjusted_facing.z > 0.5:
		print(\"forward\", adjusted_facing)
		animation_direction = DIRECTION.FORWARD
	elif -adjusted_facing.x > 0.5:
		print(\"right\", adjusted_facing)
		animation_direction = DIRECTION.RIGHT
	elif adjusted_facing.x > 0.5:
		print(\"left\", adjusted_facing)
		animation_direction = DIRECTION.LEFT
	elif adjusted_facing.z > 0.5:
		print(\"down\", adjusted_facing)
		animation_direction = DIRECTION.BACK

	# play animatoin based on animation_direction


func _input(event):
	if event is InputEventKey:
		if event.scancode == KEY_W:
			facing = Vector3.FORWARD
		elif event.scancode == KEY_A:
			facing = Vector3.LEFT
		elif event.scancode == KEY_S:
			facing = Vector3.BACK
		elif event.scancode == KEY_D:
			facing = Vector3.RIGHT
"

